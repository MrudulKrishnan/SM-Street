    <androidx.cardview.widget.CardView
        android:layout_width="405dp"
        android:layout_height="380dp"
        app:cardBackgroundColor="#BAD6D4"
        app:cardCornerRadius="80dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="340dp"
            android:dividerPadding="10dp"
            android:orientation="horizontal"
            android:padding="20dp"

            >

            <!--            <ImageView-->
            <!--                android:id="@+id/imgaprtmnt"-->
            <!--                android:layout_width="74dp"-->
            <!--                android:layout_height="115dp"-->
            <!--                android:layout_marginTop="20dp"-->
            <!--                android:src="@drawable/ic_launcher_background" />-->


            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="300dp"
                android:layout_marginStart="1dp"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="310dp"
                    android:layout_height="152dp"
                    android:layout_marginTop="30dp"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:useDefaultMargins="true">

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Shop name" />

                    <TextView
                        android:id="@+id/TV1_Notification"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Address" />

                    <TextView
                        android:id="@+id/TV2_Date"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Phone" />

                    <TextView
                        android:id="@+id/TV3_Phone"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView37"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Email" />

                    <TextView
                        android:id="@+id/TV4_Email"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content" />

                </GridLayout>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/B1_ViewProducts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="view products" />

                    <Button
                        android:id="@+id/B2_Rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rating" />
                </TableRow>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

