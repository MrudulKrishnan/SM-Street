<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b0f7e1"
    android:orientation="vertical"

    tools:context=".sent_complaint_reply">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:textColor="#95f5c8"

            android:layout_height="wrap_content"
            android:text="Shop name" />

        <SearchView
            android:id="@+id/SV1_SearchComplaintsWorker"
            android:background="#898F8D"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button43"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send new complaint" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/list_complaint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </TableRow>

</LinearLayout>